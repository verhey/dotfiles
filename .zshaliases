# Aliases
# source ~/.zshaliases in your .zshrc

# zsh
alias zshconfig='code ~/.zshrc'
alias ohmyzsh='code ~/.oh-my-zsh'

# fix brew doctor + pyenv
alias brew='env PATH="${PATH//$(pyenv root)\/shims:/}" brew'

# nav
alias cdc='cd ~/code/launchdarkly'
alias cdtf='cd ~/code/launchdarkly/terraform'

# git
alias gs='git status'
alias gd='git diff -b -w'
alias gds='git diff --staged -b -w'
alias gdb='git diff develop...HEAD'
alias gdbm='git diff main..HEAD'
alias gb='git --no-pager branch -v'
alias gcm='git switch main'
alias gcd='git switch develop'
alias mgs="find . -name .git -type d -execdir zsh -c 'pwd; git status -s -b; echo' \;"
alias mgf="find . -name .git -type d -execdir zsh -c 'pwd; git fetch --all; echo' \;"

# dotfiles
alias dotfiles='/usr/bin/git --git-dir=$HOME/.dotfiles/ --work-tree=$HOME'

# aws-cli
alias aws_login='saml2aws login -a'

# snowsql
alias snowsql=/Applications/SnowSQL.app/Contents/MacOS/snowsql

# general purpose
weather () {
    curl https://wttr.in/"${1}"
}
alias whatsmyip='curl ipinfo.io'

alias dbt_build_modified='dbt build -m $(git diff --name-only --diff-filter=AMRC main -- **/*.sql | sed -r "s/.+\/(.+)\..+/\1/")'
